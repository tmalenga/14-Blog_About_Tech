<style>
    * {
        margin: 0;
        padding: 0;
        color: black; 
        text-decoration: none;
    }
    .postCard {
        margin: 10px;
        padding: 5px;
        border: 3px black solid;
        border-radius: 10px;
    }
    
    h3 {
        margin-bottom: 0;
    }
    .postCard {
        text-align: center;
    }
    .postHeader {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px;
        border-radius: 10px;
        background: lightblue;
    }
    p {
        margin-top: 0;
        margin-bottom: 0;
    }
</style>

<h2>Home Page</h2>
{{#each posts as |post|}}
<div class="postCard">
    <a href="/post/{{post.id}}">
        <div class="postHeader">
            <h3>{{post.title}}</h3>
        </div>
        <p class="footerText">Created by {{user.username}}</p> 
    </a>
</div>
{{/each}}